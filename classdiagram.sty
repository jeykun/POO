\newcommand{\ATTR}[4][]{% [inline]{privacity}{name}{description}	
	\ifbreakLine \\ \fi
	#2 & \texttt{.#3}
   \ifthenelse{ \equal{#1}{inline} }
    {
    	\ifthenelse{ \equal{#4}{} }
    	{}
    	{\idescript{#4}}
    }
	{
		\ifthenelse{ \equal{#4}{} }
    	{}
		{\descript{#4}}
	}	
    \breakLinetrue
}


